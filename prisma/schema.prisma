generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String    @id @default(cuid())
  role          UserRole  @default(MEMBER)
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts Account[]
  sessions Session[]
  ownedArtists Artist[] @relation("ArtistOwner")
  notes        ArtistNote[]
  activities   ArtistActivity[]
  stageChanges ArtistStageHistory[]
  auditLogs    AuditLog[]
  outboundMessages OutboundMessage[]
  spotifySyncJobs SpotifySyncJob[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Artist {
  id                       String   @id @default(cuid())
  name                     String
  status                   ArtistStatus @default(LEAD)
  ownerId                  String?
  owner                    User? @relation("ArtistOwner", fields: [ownerId], references: [id])
  tags                     Tag[]
  spotifyUrl               String?
  spotifyId                String?  @unique
  instagram                String?
  monthlyListeners         Int?
  email                    String?
  facebook                 String?
  x                        String?
  twitter                  String?
  tiktok                   String?
  youtube                  String?
  soundcloud               String?
  website                  String?
  spotifyFollowers         Int?
  spotifyPopularity        Int?
  spotifyGenres            String[] @default([])
  spotifyImage             String?
  spotifyLatestReleaseName String?
  spotifyLatestReleaseDate DateTime?
  spotifyLatestReleaseUrl  String?
  spotifyLatestReleaseType String?
  spotifyLatestReleaseImage String?
  spotifyLastSyncedAt      DateTime?
  needsSync                Boolean @default(true)
  campaignNotes            String?
  nextStepAt               DateTime?
  nextStepNote             String?
  reminderAt               DateTime?
  lastContactedAt          DateTime?
  wonReason                String?
  lostReason               String?
  contactName              String?
  contactRole              String?
  contactNotes             String?
  createdAt                DateTime @default(now())
  updatedAt                DateTime @updatedAt
  notes                    ArtistNote[]
  activities               ArtistActivity[]
  stageHistory             ArtistStageHistory[]
  releases                 ArtistRelease[]
  outboundMessages         OutboundMessage[]

  @@index([status])
  @@index([ownerId])
  @@index([needsSync])
  @@index([spotifyLastSyncedAt])
  @@index([nextStepAt])
  @@index([reminderAt])
  @@index([spotifyLatestReleaseDate])
  @@index([createdAt])
  @@index([name])
}

model ArtistNote {
  id        String   @id @default(cuid())
  artistId  String
  userId    String
  body      String
  createdAt DateTime @default(now())

  artist Artist @relation(fields: [artistId], references: [id], onDelete: Cascade)
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model ArtistActivity {
  id        String   @id @default(cuid())
  artistId  String
  userId    String?
  type      String
  detail    String?
  createdAt DateTime @default(now())

  artist Artist @relation(fields: [artistId], references: [id], onDelete: Cascade)
  user   User?  @relation(fields: [userId], references: [id], onDelete: SetNull)
}

model ArtistStageHistory {
  id        String   @id @default(cuid())
  artistId  String
  userId    String?
  fromStatus ArtistStatus
  toStatus   ArtistStatus
  createdAt DateTime @default(now())

  artist Artist @relation(fields: [artistId], references: [id], onDelete: Cascade)
  user   User?  @relation(fields: [userId], references: [id], onDelete: SetNull)
}

model ArtistRelease {
  id               String   @id @default(cuid())
  artistId         String
  name             String
  releaseDate      DateTime
  releaseUrl       String?
  releaseType      String?
  spotifyReleaseId String?  @unique
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  artist Artist @relation(fields: [artistId], references: [id], onDelete: Cascade)

  @@index([artistId])
  @@index([releaseDate])
}

model Tag {
  id      String   @id @default(cuid())
  name    String   @unique
  artists Artist[]
}

model OutboundMessage {
  id         String   @id @default(cuid())
  artistId   String
  userId     String?
  channel    OutboundChannel
  subject    String?
  body       String?
  template   String?
  sentAt     DateTime
  createdAt  DateTime @default(now())

  artist Artist @relation(fields: [artistId], references: [id], onDelete: Cascade)
  user   User?  @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([artistId])
  @@index([sentAt])
}

model AuditLog {
  id         String   @id @default(cuid())
  action     String
  userId     String?
  userEmail  String?
  entityType String?
  entityId   String?
  path       String?
  method     String?
  ip         String?
  userAgent  String?
  metadata   Json?
  createdAt  DateTime @default(now())

  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([createdAt])
  @@index([action])
}

enum ArtistStatus {
  LEAD
  CONTACTED
  NEGOTIATING
  WON
  LOST
}

enum SpotifySyncJobStatus {
  QUEUED
  RUNNING
  COMPLETED
  FAILED
}

model SpotifySyncJob {
  id            String                @id @default(cuid())
  status        SpotifySyncJobStatus  @default(QUEUED)
  requestedById String?
  requestedBy   User?                 @relation(fields: [requestedById], references: [id], onDelete: SetNull)
  cursor        String?
  total         Int?
  synced        Int                   @default(0)
  failed        Int                   @default(0)
  batchSize     Int                   @default(10)
  lastError     String?
  startedAt     DateTime?
  finishedAt    DateTime?
  createdAt     DateTime              @default(now())
  updatedAt     DateTime              @updatedAt
}

enum UserRole {
  ADMIN
  MEMBER
}

enum OutboundChannel {
  EMAIL
}
